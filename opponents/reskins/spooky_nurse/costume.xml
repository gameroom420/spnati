<?xml version='1.0' encoding='UTF-8'?>
<costume>
    <id>nurse_spooky</id>
    <label>Spooky</label>
    <tags>
        <tag>alternative_skin</tag>
        <tag remove="true">blade</tag>
        <tag from="0" to="0">hat</tag>
        <tag remove="true">weapon</tag>
    </tags>
    <folder>opponents/reskins/spooky_nurse/</folder>
    <folder stage="2">opponents/spooky/</folder>
    <wardrobe>
        <clothing name="panties" generic="underwear" position="lower" type="important" plural="true" />
        <clothing name="bra" generic="bra" position="upper" type="important" />
        <clothing name="dress" generic="dress" position="both" type="major" />
        <clothing name="hat" generic="hat" position="head" type="extra" />
    </wardrobe>

    <poses>
        <pose id="2-stripped">
            <sprite id="stripped1" src="spooky/2-stripped1.png" x="0" y="0" alpha="100" />
            <sprite id="stripped2" src="spooky/2-stripped2.png" x="0" y="0" alpha="0" />
            <directive type="animation" id="stripped1" ease="smooth" interpolation="linear">
                <keyframe time="0" x="0" y="0" alpha="100" />
                <keyframe time="1" alpha="100" />
                <keyframe time="3" alpha="0" />
            </directive>
            <directive type="animation" id="stripped2" ease="smooth" interpolation="linear">
                <keyframe time="0" x="0" y="0" alpha="0" />
                <keyframe time="1" alpha="0" />
                <keyframe time="3" alpha="100" />
            </directive>
        </pose>
    </poses>
</costume>
