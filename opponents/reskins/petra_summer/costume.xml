<?xml version='1.0' encoding='UTF-8'?>
<costume>
    <id>petra_summer</id>
    <label>Petra</label>
    <tags>
        <tag>alternative_skin</tag>
        <tag remove="true">high_heels</tag>
        <tag>jewelry</tag>
        <tag>scantily-clad</tag>
        <tag remove="true">school_uniform</tag>
        <tag remove="true">student</tag>
        <tag>summer_skin</tag>
        <tag from="0" to="5">swimwear</tag>
        <tag from="0" to="4">thong</tag>
    </tags>
    <layers>4</layers>
    <folder>opponents/reskins/petra_summer/</folder>
    <wardrobe>
        <clothing name="bikini top" generic="swimsuit" position="upper" type="major" />
        <clothing name="bikini bottoms" generic="swimsuit" position="lower" type="major" plural="true" />
        <clothing position="" type="skip" />
        <clothing name="armband" generic="armbands" position="arms" type="minor" />
        <clothing position="" type="skip" />
        <clothing name="sandals" generic="shoes" position="feet" type="extra" plural="true" />
    </wardrobe>

    <poses>
        <pose id="0-sunglasses">
            <sprite id="calmSmile" src="reskins/petra_summer/0-calmSmile.png" x="0" y="0" scalex="1" scaley="1" alpha="100" />
            <sprite id="sunglasses" delay="0.5" src="petra/sunglasses.png" x="-45" y="-500" scalex="0.4" scaley="0.4" />
            <directive type="animation" id="sunglasses" delay="0.5" ease="ease-out-cubic" interpolation="linear">
                <keyframe time="0" x="-45" y="-500" />
                <keyframe time="3.5" x="-45" y="234" />
            </directive>
        </pose>
        <pose id="4-stripPlus_animated">
            <sprite id="4-stripPlus" src="reskins/petra_summer/4-stripPlus.png" x="0" y="0" />
            <directive type="animation" id="4-stripPlus" ease="linear" interpolation="none">
                <keyframe time="0" src="reskins/petra_summer/4-stripPlus.png" />
                <keyframe time="1.5" src="reskins/petra_summer/4-stripPlusB.png" />
            </directive>
        </pose>
        <pose id="8-blank" />
    </poses>
</costume>
